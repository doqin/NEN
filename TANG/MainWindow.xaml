<Window x:Class="TANG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TANG"
        mc:Ignorable="d"
        Title="T.Ả.N.G." Height="450" Width="800"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" Loaded="Window_Loaded">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Tệp">
                    <MenuItem Header="Mới">

                    </MenuItem>
                    <MenuItem x:Name="Open" Header="Mở" Click="Open_Click">

                    </MenuItem>
                    <MenuItem Header="Thoát">

                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Chỉnh sửa">

                </MenuItem>
                <MenuItem Header="Hiển thị">

                </MenuItem>
                <MenuItem Header="Dự án">
                    <MenuItem Header="Cài đặt">

                    </MenuItem>
                </MenuItem>
            </Menu>
            <Grid Margin="5, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="230"/>
                </Grid.ColumnDefinitions>
                <TabControl x:Name="editorTab">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="TabHeader" Text="{Binding Header}" MouseDown="TabHeader_MouseDown"/>
                                <Button  
                                        Content="✕" 
                                        Background="Transparent" 
                                        BorderBrush="Transparent" 
                                        Margin="5 0 0 0" 
                                        Click="Close_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <local:EditorControl 
                                Text="{Binding Text}"
                                FontFamily="Consolas"
                                WordWrap="true"
                                FontSize="14" Margin="20,0,0,0"
                                />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
                
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
                <TreeView x:Name="explorer" Grid.Column="2">
                </TreeView>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
