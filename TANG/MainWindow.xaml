<Window x:Class="TANG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TANG"
        mc:Ignorable="d"
        Title="T.Ả.N.G." Height="730" Width="1044"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" Loaded="Window_Loaded"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Tệp">
                    <MenuItem Header="Mới">

                    </MenuItem>
                    <MenuItem x:Name="Open" Header="Mở" Click="Open_Click">

                    </MenuItem>
                    <MenuItem x:Name="Save" Header="Lưu" Click="Save_Click">

                    </MenuItem>
                    <MenuItem Header="Thoát">

                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Chỉnh sửa">

                </MenuItem>
                <MenuItem Header="Hiển thị">

                </MenuItem>
                <MenuItem Header="Dự án">
                    <MenuItem Header="Cài đặt">

                    </MenuItem>
                </MenuItem>
            </Menu>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar Margin="4" 
                         BorderThickness="1">
                    <Button IsEnabled="False">
                        <iconPacks:PackIconRemixIcon Kind="ArrowGoBackFill"/>
                    </Button>
                    <Button IsEnabled="False">
                        <iconPacks:PackIconRemixIcon Kind="ArrowGoForwardFill"/>
                    </Button>
                    <Separator/>
                    <Button x:Name="SaveButton" Click="Save_Click">
                        <iconPacks:PackIconMaterial Kind="ContentSaveOutline" Foreground="CornflowerBlue"/>
                    </Button>
                    <Separator/>
                    <Button x:Name="Build" Click="Build_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="CogOutline"/>
                            <TextBlock Text="Xây dựng" 
                                       Margin="5 0 0 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="Run" Click="Run_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <iconPacks:PackIconMaterialDesign Kind="PlayArrowRound" Foreground="LightGreen"/>
                            <TextBlock Text="Chạy" 
                                       Margin="5 0 0 0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </ToolBar>
            </ToolBarTray>
            <Grid Margin="5,0,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <TabControl x:Name="editorTab" Margin="5">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel VerticalAlignment="Center">
                                <TextBlock x:Name="TabHeader" 
                                           Text="{Binding DisplayHeader}" 
                                           MouseDown="TabHeader_MouseDown"
                                           VerticalAlignment="Center"
                                           Margin="5"/>
                                <TextBlock Text=""/>
                                <Button  
                                    Content="✕" 
                                    Background="Transparent" 
                                    BorderBrush="Transparent" 
                                    Click="Close_Click"
                                    DockPanel.Dock="Right"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"/>
                            </DockPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <local:EditorControl 
                                Text="{Binding Text}"
                                FilePath="{Binding Path}"
                                FontFamily="Consolas"
                                WordWrap="true"
                                FontSize="14" Margin="20,0,0,0"
                                />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>

                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="Transparent"/>
                <GroupBox Header="Duyệt tệp tin" Grid.Column="2" BorderThickness="0.1">
                    <TreeView x:Name="explorer" BorderThickness="0">
                        <TreeView.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="AddFile" Header="Tạo tệp mới" Click="AddFile_Click"/>
                                <MenuItem x:Name="AddFolder" Header="Tạo thư mục" Click="AddFolder_Click"/>
                            </ContextMenu>
                        </TreeView.ContextMenu>
                    </TreeView>
                </GroupBox>

            </Grid>
        </DockPanel>
    </Grid>
</Window>
